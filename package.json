{
    "name": "@eigenspace/utils",
    "version": "1.2.32",
    "private": false,
    "scripts": {
        "build": "webpack --config webpack.config.package.js --progress && yarn bundle-dts",
        "bundle-dts": "node node_modules/@eigenspace/helper-scripts/scripts/project/bundle-dts.js",
        "lint": "tslint --project tsconfig.json && yarn lint:markdown\n",
        "lint:fix": "tslint --project tsconfig.json --fix",
        "lint:markdown": "node ./node_modules/@eigenspace/codestyle/scripts/markdown-lint.js",
        "test": "jest",
        "deploy:publish": "node node_modules/@eigenspace/helper-scripts/scripts/ci/publish.js",
        "hooks:pre-push": "yarn lint && yarn test",
        "script:update-deps": "node node_modules/@eigenspace/helper-scripts/scripts/project/update-deps.js"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn hooks:pre-push",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint:fix",
            "git add"
        ]
    },
    "devDependencies": {
        "@eigenspace/codestyle": "1.1.56",
        "@eigenspace/helper-scripts": "1.0.61",
        "@types/jest": "24.0.3",
        "@types/node": "11.9.5",
        "clean-webpack-plugin": "1.0.1",
        "copy-webpack-plugin": "4.6.0",
        "husky": "1.3.1",
        "jest": "24.7.1",
        "lint-staged": "8.1.5",
        "ts-jest": "24.0.2",
        "ts-loader": "5.3.3",
        "tslint": "5.12.1",
        "typescript": "3.3.3",
        "webpack": "4.29.3",
        "webpack-cli": "3.2.3"
    },
    "main": "index.js",
    "types": "index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/eigen-space/core-web-utils.git"
    },
    "license": "MIT"
}
